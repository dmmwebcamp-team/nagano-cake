<div class="container">
  <strong class="bg-light">注文履歴一覧</strong>
  <table class="table">
    <thead class="table-active">
      <tr>
        <th scope="col-4">購入日時</th>
        <th scope="col-3">購入者</th>
        <th scope="col-3">注文個数</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to admin_order_path(order.id), class: "text-dark" do %>
              <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
            <% end %>
          </td>
          <td><%= order.delivery_name %></td>
          <td><%= order.order_items.sum(:purchase_amount) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @orders %>
</div>

</div>
