<div class="container">
  <strong class="bg-light m-5 fs-5"><%= @customer.full_name %>さんの会員情報編集</strong>
  <%= form_with model: @customer, url:admin_customer_path, local: true do |f| %>
  <div class="row ml-3 mb-1 pt-4 align-items-center">
    <div class="col-3">
      <label class="col-form-label">会員ID</label>
    </div>
      <div class="col-4"><%= @customer.id %></div>
  </div>
  <div class="row ml-3 mb-1 pt-1 align-items-center">
    <div class="col-3">
      <label class="col-form-label">氏名</label>
    </div>
      <a class="col-4"><%= f.text_field :first_name %></a>
      <a class="col-4"><%= f.text_field :last_name %></a>
  </div>
  <div class="row ml-3 mb-1 pt-1 align-items-center">
    <div class="col-3">
      <label class="col-form-label">フリガナ</label>
    </div>
      <a class="col-4"><%= f.text_field :first_name_kana %></a>
      <a class="col-4"><%= f.text_field :last_name_kana %></a>
  </div>
  <div class="row ml-3 mb-1 pt-1 align-items-center">
    <div class="col-3">
      <label class="col-form-label">郵便番号</label>
    </div>
      <a class="col-4"><%= f.text_field :postal_code %></a>
  </div>
   <div class="row ml-3 mb-1 pt-1 align-items-center">
    <div class="col-3">
      <label class="col-form-label">住所</label>
    </div>
      <a class="col-7"><%= f.text_field :address %></a>
  </div>
  <div class="row ml-3 mb-1 pt-1 align-items-center">
    <div class="col-3">
      <label class="col-form-label">電話番号</label>
    </div>
      <a class="col-4"><%= f.text_field :telephone_number %></a>
  </div>
  <div class="row ml-3 mb-1 pt-1 align-items-center">
    <div class="col-3">
      <label class="col-form-label">メールアドレス</label>
    </div>
      <a class="col-4"><%= f.text_field :email %></a>
  </div>
  <div class="row ml-3 mb-1 pt-1 align-items-center">
    <div class="col-3">
      <label class="col-form-label">会員ステータス</label>
    </div>
    <div class="col-4">
      <%= f.radio_button :is_active, :true %>
      <%= f.label :is_active_true, "有効" %>
      <%= f.radio_button :is_active, :false %>
      <%= f.label :is_active_false, "退会" %>
    </div>
  </div>
  <div class="row ml-3 mb-1 pt-4 align-items-center">
    <div class="form-group col-4 offset-3">
      <%= f.submit "変更を保存", class:"btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>
