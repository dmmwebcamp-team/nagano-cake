<div class="container">
  <strong class="bg-light m-5 fs-5"><%= @customer.full_name %>さんの会員詳細</strong>
  <table class="table table-borderless ml-5 mt-3">
    <tr><th>会員ID</th><td><%= @customer.id %></td></tr>
    <tr><th>氏名</th><td><%= @customer.first_name %><%= @customer.last_name %></td></tr>
    <tr><th>フリガナ</th><td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td></tr>
    <tr><th>郵便番号</th><td><%= @customer.postal_code %></td></tr>
    <tr><th>住所</th><td><%= @customer.address %></td></tr>
    <tr><th>電話番号</th><td><%= @customer.telephone_number %></td></tr>
    <tr><th>メールアドレス</th><td><%= @customer.email %></td></tr>
    <tr>
      <th>会員ステータス</th>
      <td>
        <% if @customer.is_active %>
          <span class="text-success">有効</span>
        <% else %>
          <span class="text-secondary">退会</span>
        <% end %>
      </td>
    </tr>
    <tr>
      <th></th>
      <td>
        <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success mr-4", role: "button" %>
        <%= link_to "注文履歴一覧を見る", admin_orders_path, class: "btn btn-primary", role: "button" %>
      </td>
    </tr>
  </table>
</div>
