<div class="container">
  <span class="bg-light m-5">商品新規登録</span>
  <%= form_with model: @item, url:admin_items_path, local: true do |f| %>
    <div class="row ml-3 mb-1 pt-4 align-items-center">
      <div class="col-3">
        <label for="item_image" class="col-form-label">商品画像</label>
      </div>
      <div class="col-4">
        <%= f.file_field :image, id: "item_image", accept: "image/*" %>
      </div>
    </div>
    <div class="row ml-3 mb-1 pt-4 align-items-center">
      <div class="col-3">
        <label for="item_name" class="col-form-label">商品名</label>
      </div>
      <div class="col-4">
        <%= f.text_field :name, id: "item_name", class: "form-control" %>
      </div>
    </div>
    <div class="row ml-3 mb-1 pt-4 align-items-center">
      <div class="col-3">
        <label for="item_introduction" class="col-form-label">商品説明</label>
      </div>
      <div class="col-4">
        <%= f.text_area :introduction, id: "item_introduction", class: "form-control", rows: 5 %>
      </div>
    </div>
    <div class="row ml-3 mb-1 pt-4 align-items-center">
      <div class="col-3">
        <label for="item_price" class="col-form-label">税抜価格</label>
      </div>
      <div class="col-4">
        <%= f.text_field :price, id: "item_price", class: "form-control" %>
      </div>
      <div class="col-1">
        円
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-4 offset-4">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>