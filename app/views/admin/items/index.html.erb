<div class="container">
  <div class="row wrap">
    <span class="bg-light">商品一覧</span>
    <div class="text-right">
      <%= link_to new_admin_item_path, class: "nav-link" do %>
        <i class="fa-solid fa-circle-plus fa-lg" style="color:black;"></i>
      <% end %>
    </div>
  </div>
  <table class="table">
    <thead class="table-light">
      <tr>
        <th scope="col-2">商品ID</th>
        <th scope="col-4">商品名</th>
        <th scope="col-3">税抜価格</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id), class: "nav-link text-dark" do %>
              <%= item.name %>
            <% end %>
          </td>
          <td><%= item.price.to_s(:delimited)  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @items %>
</div>

