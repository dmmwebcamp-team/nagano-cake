<div class="container">
  <span class="bg-light ml-5">注文情報入力</span>
  <%= form_with model: @order, url: orders_confirm_path, method: :post, remote: true do |f| %>
   <strong class="ml-2">支払い方法</strong>
   <div class="ml-5">
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %><br>
    <%= f.radio_button :payment_method, Order.payment_methods.key(2) %>
    <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer]%>
   </div>

   <strong class="ml-2">お届け先</strong>
   <div class="ml-5">
    〒<%= @customer.postal_code %><%= @customer.address %> <br> <%= @customer.first_name %><%= @customer.last_name %>
   </div>
   <div class="d-flex justify-content-center mt-4">
    <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
   </div>
  <% end %>
</div>
