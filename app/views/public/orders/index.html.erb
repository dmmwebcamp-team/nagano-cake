<div class="container">
  <span class="bg-light ml-5">注文履歴一覧</span>
  <table class="table table-bordered mx-5">
    <thead class="table-active">
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払い金額</th>
      <th>注文詳細</th>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>〒<%= order.attention_postal_code %><br><%= order.attention_address %><br><%= order.delivery_name %></td>
          <td>
            <% order.order_items.each do |order_item| %>
              <%= order_item.item.name %><br>
            <% end %>
          </td>
          <td><%= number_with_delimiter(order.payment.to_i) %></td>
          <td><%= link_to "表示する", order_path(order), class:"btn btn-primary btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
