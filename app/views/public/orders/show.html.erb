<div class="container">
  <span class="bg-light ml-5">注文履歴詳細</span>
  <div class="row mt-3">
    <div class="col-7">
      <strong>注文情報</strong>
      <table class="table table-bordered mt-2">
        <tr>
          <th class="table-active">注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th class="table-active">配送先</th>
          <td>〒<%= @order.attention_postal_code %><br><%= @order.attention_address %><br><%= @order.delivery_name %></td>
        </tr>
        <tr>
          <th class="table-active">支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col">
      <strong>請求情報</strong>
      <table class="table table-bordered mt-2">
        <tr>
          <th class="table-active">商品合計</th>
          <td><%= number_with_delimiter(@total_price) %></td>
        </tr>
        <tr>
          <th class="table-active">配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th class="table-active">ご請求額</th>
          <td><%= number_with_delimiter(@order.payment) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="col-8 mt-5">
    <strong>注文内容</strong>
    <table class="table table-bordered mt-2">
      <thead class="table-active">
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= number_with_delimiter(order_item.purchase_price) %></td>
            <td><%= order_item.purchase_amount %></td>
            <td><%= number_with_delimiter(order_item.subtotal.to_i) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
