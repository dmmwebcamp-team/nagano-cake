<div class="container">
  <h3><strong>商品一覧</strong>（全<%= @item_count %>件）</h3>
    <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3">
        <div class="product-block text-center">
          <a href="items/<%= item.id %>">
            <%= image_tag item.image, class: "product-image" %>
            <p class="product-name"><%= item.name %></p>
            <p class="product-price">¥<%= item.price.to_i %></p>
          </a>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @items %>
</div>

