<div class="container">
  <span class="bg-light">新規会員登録</span>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="row ml-3 mb-1 pt-4 align-items-center">
      <div class="col-3">
        <label for="Name" class="col-form-label">名前</label>
      </div>
      <div class="col-1">
        <label for="FirstName" class="col-form-label">（姓）</label>
      </div>
      <div class="col-4">
        <input type="text" name="customer[first_name]" class="form-control" id="FirstName">
      </div>
      <div class="col-1">
        <label for="LastName" class="col-form-label">（名）</label>
      </div>
      <div class="col-3">
        <input type="text" name="customer[last_name]" class="form-control" id="LastName">
      </div>
    </div>

    <div class="row ml-3 mb-1 align-items-center">
      <div class="col-3">
        <label for="NameKana" class="col-form-label">フリガナ</label>
      </div>
      <div class="col-1">
        <label for="FirstNameKana" class="col-form-label">（セイ）</label>
      </div>
      <div class="col-4">
        <input type="text" name="customer[first_name_kana]" class="form-control" id="FirstNameKana">
      </div>
      <div class="col-1">
        <label for="LastNameKana" class="col-form-label">（メイ）</label>
      </div>
      <div class="col-3">
        <input type="text" name="customer[last_name_kana]" class="form-control" id="LastNameKana">
      </div>
    </div>

    <div class="row ml-3 mb-1 align-items-center">
      <div class="col-4">
        <label for="Email" class="col-form-label">メールアドレス</label>
      </div>
      <div class="col-4">
        <input type="email" name="customer[email]" class="form-control" id="Email">
      </div>
    </div>

    <div class="row ml-3 mb-1 align-items-center">
      <div class="col-4">
        <label for="PostalCode" class="col-form-label">郵便番号（ハイフンなし）</label>
      </div>
      <div class="col-4">
        <input type="number" name="customer[postal_code]" class="form-control" id="PostalCode">
      </div>
    </div>

    <div class="row ml-3 mb-1 align-items-center">
      <div class="col-4">
        <label for="Address" class="col-form-label">住所</label>
      </div>
      <div class="col-8">
        <input type="text" name="customer[address]" class="form-control" id="Address">
      </div>
    </div>

    <div class="row ml-3 mb-1 align-items-center">
      <div class="col-4">
        <label for="TelephoneNumber" class="col-form-label">電話番号（ハイフンなし）</label>
      </div>
      <div class="col-4">
        <input type="number" name="customer[telephone_number]" class="form-control" id="TelephoneNumber">
      </div>
    </div>

    <div class="row ml-3 mb-1 align-items-center">
      <div class="col-4">
        <label for="Password" class="col-form-label">パスワード（６文字以上）</label>
      </div>
      <div class="col-4">
        <input type="password" class="form-control" name="customer[password]" id="Password">
      </div>
    </div>

    <div class="row ml-3 mb-1 align-items-center">
      <div class="col-4">
        <label for="PasswordConfirmation" class="col-form-label">パスワード（６文字以上）</label>
      </div>
      <div class="col-4">
        <input type="password" class="form-control" name="customer[password_confirmation]" id="PasswordConfirmation">
      </div>
    </div>

    <div class="row justify-content-center col-4 offset-4">
      <input class="btn btn-success" type="submit" value="新規登録">
    </div>
  <% end %>
  <span class="bg-light">既に登録済みの方</span>
  <div class="row ml-2 mt-2 align-items-center">
    <a class="nav-link mx-2" href="/customers/sign_in">こちら</a>
    からログインしてください。
  </div>

</div>


